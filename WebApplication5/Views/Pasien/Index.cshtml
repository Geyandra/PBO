@model IEnumerable<Pasien>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Pasien List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Pasien" asp-action="Create" class="btn btn-primary">
                Pasien Baru
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nama
            </th>
            <th>
                Jenis Kelamin
            </th>
            <th>
                NIK
            </th>
            <th>
                Umur
            </th>
            <th>
                Poli
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width:"30%">
                    @obj.Nama
                </td>
                <td width:"30%">
                    @obj.NIK
                </td>
                <td width:"30%">
                    @obj.Jenis_Kelamin
                </td>
                <td width:"20%">
                    @obj.Umur
                </td>
                <td width:"20%">
                    @obj.Poli
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Pasien" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Pasien" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Hapus</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>